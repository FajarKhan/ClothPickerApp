<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.fajar.clothpickerapp.Fragments.AddCloths">

    <!-- activity view -->
    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_image">

        <TextView
            android:id="@+id/cloths_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:layout_marginTop="100dp"
            android:drawableTop="@drawable/add_cloths"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="Add more cloths to see best match \nin 'What to wear' screen!"
            android:textColor="@android:color/white" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/Btn_add_cloths"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="40dp"
            android:layout_marginRight="40dp"
            android:clickable="true"
            android:src="@drawable/add_cloths_fab"
            app:backgroundTint="@color/accent" />

    </FrameLayout>


</LinearLayout>



